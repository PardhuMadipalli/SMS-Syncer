<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/surface_variant"
    android:elevation="8dp">

    <!-- Top Border/Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/outline" />

    <!-- Navigation Items Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Topic Navigation Item -->
        <LinearLayout
            android:id="@+id/navTopicItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Topic settings icon"
                android:src="@drawable/ic_topic"
                app:tint="@color/on_surface_variant"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@color/on_surface_variant" />

        </LinearLayout>

        <!-- Filters Navigation Item -->
        <LinearLayout
            android:id="@+id/navFiltersItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Filters menu icon"
                android:src="@drawable/ic_filter"
                app:tint="@color/on_surface_variant"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@color/on_surface_variant" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
